public class RandomWalk {
	public static void main(String[] args) {
		int x = 5, y = 5;
		boolean tile[][] = new boolean[10][10];
		int steps;
		title[5][5] = true;
		for(steps=0; steps<10; steps++) {
			int direction = (int) (Math.random() * 4);
			if (direction == 0 && x>0)
				x--;
			else if(direction == 1 && x<9)
				x++;
			else if(direction == 2 && y>0)
				y--;
			else if(y<9)
				y++;
			tile[y][x] = true;
			System.out.println("--------------------------");
		}
	}
}
